{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es5",
        "module": "commonjs",
        "lib": ["es2016", "dom"],
        "noImplicitAny": false,
        "strictNullChecks": false,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "jsx": "react"
    },
    "typeAcquisition": {
        "enable": true
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}